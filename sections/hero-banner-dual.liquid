{{ 'section-hero-banner-dual.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .hero-banner-dual-{{ section.id }} {
    min-height: {{ section.settings.desktop_height }}px;
  }

  @media screen and (max-width: 749px) {
    .hero-banner-dual-{{ section.id }} {
      min-height: {{ section.settings.mobile_height }}px;
    }
  }
{%- endstyle -%}

<div class="hero-banner-dual hero-banner-dual-{{ section.id }} section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}" data-layout="{{ section.settings.layout }}">
  <div class="hero-banner-dual__container page-width">
    <div class="hero-banner-dual__content">
      {% if section.settings.heading != blank %}
        <h1 class="hero-banner-dual__heading {{ section.settings.heading_size }}">
          {{ section.settings.heading | escape }}
        </h1>
      {% endif %}
      
      {% if section.settings.text != blank %}
        <div class="hero-banner-dual__text rte">
          {{ section.settings.text }}
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <div class="hero-banner-dual__button">
          <a 
            {% if section.settings.button_link != blank %}href="{{ section.settings.button_link }}"{% endif %}
            class="button{% if section.settings.button_style_secondary %} button--secondary{% endif %}"
            {% if section.settings.button_link == blank %}role="button"{% endif %}
          >
            {{ section.settings.button_label | escape }}
          </a>
        </div>
      {% endif %}
    </div>

    <div class="hero-banner-dual__images">
      <div class="hero-banner-dual__image-wrapper hero-banner-dual__image-wrapper--primary">
        {% if section.settings.image_1 != blank %}
          {%- assign image_height = section.settings.image_1.width | divided_by: section.settings.image_1.aspect_ratio -%}
          {{ section.settings.image_1 | image_url: width: 1500 | image_tag:
            loading: 'lazy',
            width: section.settings.image_1.width,
            height: image_height,
            class: 'hero-banner-dual__image hero-banner-dual__image--primary',
            sizes: '(min-width: 750px) 50vw, 100vw',
            widths: '375, 550, 750, 1100, 1500',
            alt: section.settings.image_1.alt | default: section.settings.heading
          }}
        {% else %}
          <div class="hero-banner-dual__placeholder">
            {{ 'hero_apparel_1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
        
        {% if section.settings.image_1_overlay_text != blank %}
          <div class="hero-banner-dual__overlay-text hero-banner-dual__overlay-text--primary">
            <span>{{ section.settings.image_1_overlay_text | escape }}</span>
          </div>
        {% endif %}
      </div>

      <div class="hero-banner-dual__image-wrapper hero-banner-dual__image-wrapper--secondary">
        {% if section.settings.image_2 != blank %}
          {%- assign image_height = section.settings.image_2.width | divided_by: section.settings.image_2.aspect_ratio -%}
          {{ section.settings.image_2 | image_url: width: 1500 | image_tag:
            loading: 'lazy',
            width: section.settings.image_2.width,
            height: image_height,
            class: 'hero-banner-dual__image hero-banner-dual__image--secondary',
            sizes: '(min-width: 750px) 50vw, 100vw',
            widths: '375, 550, 750, 1100, 1500',
            alt: section.settings.image_2.alt | default: section.settings.heading
          }}
        {% else %}
          <div class="hero-banner-dual__placeholder">
            {{ 'hero_apparel_2' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
        
        {% if section.settings.image_2_overlay_text != blank %}
          <div class="hero-banner-dual__overlay-text hero-banner-dual__overlay-text--secondary">
            <span>{{ section.settings.image_2_overlay_text | escape }}</span>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner Dual",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Discover Our Collection",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h0",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description",
      "default": "<p>Explore our carefully curated collection of premium products designed to elevate your lifestyle.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Shop Now",
      "label": "Button label",
      "info": "Leave the label blank to hide the button."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "checkbox",
      "id": "button_style_secondary",
      "default": false,
      "label": "Use outline button style"
    },
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Primary image"
    },
    {
      "type": "text",
      "id": "image_1_overlay_text",
      "label": "Primary image overlay text",
      "info": "Optional text overlay on the primary image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Secondary image"
    },
    {
      "type": "text",
      "id": "image_2_overlay_text",
      "label": "Secondary image overlay text",
      "info": "Optional text overlay on the secondary image"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "text-left",
          "label": "Text left, images right"
        },
        {
          "value": "text-right",
          "label": "Text right, images left"
        },
        {
          "value": "text-center",
          "label": "Text center, images below"
        }
      ],
      "default": "text-left",
      "label": "Desktop layout"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "min": 400,
      "max": 900,
      "step": 50,
      "unit": "px",
      "label": "Desktop minimum height",
      "default": 600
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 300,
      "max": 700,
      "step": 50,
      "unit": "px",
      "label": "Mobile minimum height",
      "default": 500
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Hero Banner Dual"
    }
  ]
}
{% endschema %}